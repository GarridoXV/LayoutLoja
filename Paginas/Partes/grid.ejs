    <button class="slider-btn seta-direita">›</button>
</div>

<script>
    // Coloque este script no final do seu arquivo HTML ou em um arquivo JavaScript externo
    document.addEventListener('DOMContentLoaded', function() {
    var grid = document.querySelector('.product-grid');
    var btnNext = document.querySelector('.seta-direita');
    var btnPrev = document.querySelector('.seta-esquerda');
    var totalItems = grid.querySelectorAll('.product-item').length;
    var itemWidth = grid.querySelector('.product-item').clientWidth;
    var visibleItems = Math.floor(grid.offsetWidth / itemWidth);
    var currentPosition = 0;

    btnNext.addEventListener('click', function() {
        // Não rola mais se o último item estiver visível
        if (currentPosition < totalItems - visibleItems) {
            currentPosition++;
            grid.scrollLeft += itemWidth;
        }
    });

    btnPrev.addEventListener('click', function() {
        // Não rola mais se o primeiro item estiver visível
        if (currentPosition > 0) {
            currentPosition--;
            grid.scrollLeft -= itemWidth;
        }
    });
});

    </script>